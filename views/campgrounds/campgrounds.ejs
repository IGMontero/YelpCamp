<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome to YelpCamp!</h1>
    <p>View our available campgrounds from all over the world</p>
    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
    </div>
</header>

<div class="row">
    <% campgrounds.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail" id="displaythumbnail">
                <figure class="figure">
                    <img class="figure-img img-responsive" src="<%=camp.image%>">
                <figcaption class="figure-caption text-center">
                    <div class="container">
                    <p class="lead">Name: <%=camp.name%></p> 
                    <p><em>Author: <%=camp.author.username %></em></p> 
                    <a href="campgrounds/<%=camp._id%>" class="btn btn-info btn-sm">More Info</a>
                    </div>
                    </figcaption>
            </figure>
            </div>
            
        </div>
    <% }) %>
</div>

</div>

<% include ../partials/footer%>