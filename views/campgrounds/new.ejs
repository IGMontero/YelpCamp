<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Add new campground</h1>
        </div>
        <div id="new-form">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <span class="badge badge-default">Name</span>
                <input class="form-control" type="text" placeholder="name" name="name">
            </div>
            <div class="form-group">
                <span class="badge badge-default">Price</span>
                <input class="form-control" type="number" min="0.01" step="0.01" placeholder="price" name="price">
            </div>
            <div class="form-group">
                <span class="badge badge-default">Image URL</span>
                <input class="form-control" type="text" placeholder="image url" name="image">
            </div>
            <div class="form-group">
                <span class="badge badge-default">Description</span>
                <input class="form-control" type="text" placeholder="description" name="description">
            </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer%>