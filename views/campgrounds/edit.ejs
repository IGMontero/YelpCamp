<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Edit <%=campground.name%></h1>
        </div>
        <div id="new-form">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <span class="badge badge-default">Name</span>
                <input class="form-control" type="text" value = "<%=campground.name%>" name="campground[name]">
            </div>
            <div class="form-group">
                <span class="badge badge-default">Price</span>
                <input class="form-control" type="number" min="0.01" step="0.01" value="<%=campground.price%>" name="campground[price]">
            </div>
            <div class="form-group">
                <span class="badge badge-default">Image URL</span>
                <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]">
            </div>
            <div class="form-group">
                <span class="badge badge-default">Description</span>
                <input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]">
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%=campground._id%>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer%>